[
  // =========================================================================
  // Unbind Defaults
  // =========================================================================
  { // Conflicts with CLI tools like micro...
    "key": "ctrl+q",
    "command": "-workbench.action.quickOpenView"
  },
  { // ... so rebind to only work outside the terminal
    "key": "ctrl+q",
    "command": "workbench.action.quickOpenView",
    "when": "!terminalFocus"
  },
  { // Don't like
    "key": "ctrl+\\",
    "command": "-workbench.action.splitEditor"
  },
  { // Don't like, accidental press when attempting panel navigation
    "key": "ctrl+shift+k",
    "command": "-editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  { // Don't like
    "key": "ctrl+shift+n",
    "command": "-workbench.action.newWindow"
  },
  { // Don't use
    "key": "ctrl+shift+m",
    "command": "-workbench.actions.view.problems"
  },
  { // Don't use
    "key": "ctrl+shift+u",
    "command": "-workbench.action.output.toggleOutput",
    "when": "workbench.panel.output.active"
  },
  { // Don't like
    "key": "ctrl+shift+w",
    "command": "-workbench.action.closeWindow"
  },
  // =========================================================================
  // Window Management
  // =========================================================================
  {
    "key": "ctrl+t",
    "command": "workbench.action.files.newUntitledFile"
  },
  // Font size
  {
    "key": "ctrl+=",
    "command": "editor.action.fontZoomIn"
  },
  {
    "key": "ctrl+-",
    "command": "editor.action.fontZoomOut"
  },
  // Browser-like tab switching
  {
    "key": "ctrl+1",
    "command": "workbench.action.openEditorAtIndex1"
  },
  {
    "key": "ctrl+2",
    "command": "workbench.action.openEditorAtIndex2"
  },
  {
    "key": "ctrl+3",
    "command": "workbench.action.openEditorAtIndex3"
  },
  {
    "key": "ctrl+4",
    "command": "workbench.action.openEditorAtIndex4"
  },
  {
    "key": "ctrl+5",
    "command": "workbench.action.openEditorAtIndex5"
  },
  {
    "key": "ctrl+6",
    "command": "workbench.action.openEditorAtIndex6"
  },
  {
    "key": "ctrl+7",
    "command": "workbench.action.openEditorAtIndex7"
  },
  {
    "key": "ctrl+8",
    "command": "workbench.action.openEditorAtIndex8"
  },
  {
    "key": "ctrl+9",
    "command": "workbench.action.openEditorAtIndex9"
  },
  // =========================================================================
  // Editor
  // =========================================================================
  {
    "key": "ctrl+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus"
  },
  { // Duplicate line down
    "key": "ctrl+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus"
  },
  { // Select line
    "key": "ctrl+l",
    "command": "expandLineSelection",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+q",
    "command": "rewrap.rewrapComment",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+m",
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  // Ctrl+E chording for editor right-click actions
  {
    "key": "ctrl+e ctrl+r",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus"
  },
  {
    "key": "ctrl+e ctrl+d",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },

  // =========================================================================
  // Activity Bar/Sidebar
  // =========================================================================
  { // Toggle sidebar
    "key": "ctrl+'",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  { // Toggle sidebar
    "key": "ctrl+shift+'",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  { // Focus sidebar
    "key": "alt+'",
    "when": "sideBarVisible",
    "command": "workbench.action.focusSideBar"
  },
  { // Open and focus sidebar (when not visible)
    "key": "alt+'",
    "when": "!sideBarVisible",
    "command": "runCommands",
    "args": {
      "commands": [
          "workbench.action.toggleSidebarVisibility",
          "workbench.action.focusSideBar"
        ]
    }
  },
  { // Unfocus sidebar
    "key": "alt+'",
    "when": "sideBarFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  { // Move to left sidebar view
    "key": "ctrl+shift+h",
    "when": "sideBarFocus",
    "command": "workbench.action.previousSideBarView"
  },
  { // Move to right sidebar view
    "key": "ctrl+shift+l",
    "when": "sideBarFocus",
    "command": "workbench.action.nextSideBarView"
  },
  { // Open testing in sidebar
    "key": "ctrl+shift+t",
    "command": "workbench.view.extension.test"
  },
  // File Explorer
  { // Enable filtering
    "key": "/",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "list.toggleKeyboardNavigation"
  },
  { // Add file
    "key": "a",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "explorer.newFile"
  },
  { // Add folder
    "key": "shift+a",
    "when": "filesExplorerFocus && !inputFocus",
    "command": "explorer.newFolder"
  },
  { // Rename file or folder
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // =========================================================================
  // Panel
  // =========================================================================
  { // Open panel, focus on terminal
    "key": "ctrl+b",
    "when": "!panelVisible",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  { // Toggle view and focus terminal
    "key": "ctrl+b",
    "when": "panelVisible",
    "command": "workbench.action.togglePanel"
  },
  { // Focus panel
    "key": "alt+b",
    "when": "panelVisible",
    "command": "workbench.action.focusPanel"
  },
  { // Open and focus panel (when not visible)
    "key": "alt+b",
    "when": "!panelVisible",
    "command": "runCommands",
    "args": {
      "commands": [
          "workbench.action.togglePanel",
          "workbench.action.focusPanel"
        ]
    }
  },
  { // Unfocus panel
    "key": "alt+b",
    "when": "panelFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  // ==== Dup above with backtick ====
  { // Open panel, focus on terminal
    "key": "ctrl+`",
    "when": "!panelVisible",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  { // Toggle view and focus terminal
    "key": "ctrl+`",
    "when": "panelVisible",
    "command": "workbench.action.togglePanel"
  },
  { // Focus panel
    "key": "alt+`",
    "when": "panelVisible",
    "command": "workbench.action.focusPanel"
  },
  { // Open and focus panel (when not visible)
    "key": "alt+`",
    "when": "!panelVisible",
    "command": "runCommands",
    "args": {
      "commands": [
          "workbench.action.togglePanel",
          "workbench.action.focusPanel"
        ]
    }
  },
  { // Unfocus panel
    "key": "alt+`",
    "when": "panelFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  // ==== End dup ====
  { // Move to left panel view
    "key": "ctrl+shift+h",
    "when": "panelFocus",
    "command": "workbench.action.previousPanelView"
  },
  { // Move to right panel view
    "key": "ctrl+shift+l",
    "when": "panelFocus",
    "command": "workbench.action.nextPanelView"
  }
  // =========================================================================
  // Unsorted
  // =========================================================================
  // Unsorted (auto/UI-generated) config appears here
]

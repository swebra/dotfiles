{
	// Based on
	// https://github.com/qingpeng9802/vscode-common-lisp/blob/master/snippets/commonlisp.json

	// You can disable extension-provided snippets that may collide via
	// https://github.com/Microsoft/vscode/issues/10565#issuecomment-721832613

	"Define Function": {
		"prefix": "defun ",
		"body": [
			"defun ${1:function-name} (${2:parameters})",
			"\t$0",
		],
	},
	"Lamda Expression": {
		"prefix": "lambda ",
		"body": "lambda (${1:parameters}) ($0)",
	},
	"If Statement": {
		"prefix": "if ",
		"body": [
			"if ${1:test-form}",
			"    ${2:then-form}",
			"    ${3:else-form}",
		],
	},
	"Conditional Statement": {
		"prefix": "cond ",
		"body": [
			"cond (${1:test-form-1} ${2:then-form-1})",
			"      (${3:test-form-2} ${4:then-form-2})",
		],
	},
}

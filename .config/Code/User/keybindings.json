[
    // =========================================================================
    // Unbind Defaults
    // =========================================================================

    {   // Reused
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal"
    },
    {   // Rebound
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quickOpenNavigateNextInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {   // Reused
        "key": "ctrl+shift+`",
        "command": "-workbench.action.terminal.new"
    },
    {   // Rebound and reused
        "key": "ctrl+shift+\\",
        "command": "-editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+w",
        "command": "-workbench.action.closeWindow"
    },
    {   // Reused
        "key": "ctrl+shift+j",
        "command": "-workbench.action.search.toggleQueryDetails",
        "when": "searchViewletVisible"
    },
    {   // Reused
        "key": "ctrl+shift+k",
        "command": "-editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    {   // Reused
        "key": "ctrl+shift+n",
        "command": "-workbench.action.newWindow"
    },
    {   // Reused
        "key": "ctrl+shift+m",
        "command": "-workbench.actions.view.problems"
    },

    {   // Rebound
        "key": "ctrl+1",
        "command": "-workbench.action.focusFirstEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+2",
        "command": "-workbench.action.focusSecondEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+3",
        "command": "-workbench.action.focusThirdEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+4",
        "command": "-workbench.action.focusFourthEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+5",
        "command": "-workbench.action.focusFifthEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+6",
        "command": "-workbench.action.focusSixthEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+7",
        "command": "-workbench.action.focusSeventhEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+8",
        "command": "-workbench.action.focusEighthEditorGroup"
    },
    {   // Rebound
        "key": "ctrl+9",
        "command": "-workbench.action.lastEditorInGroup"
    },


    // =========================================================================
    // Window Management
    // =========================================================================

    {
        "key": "ctrl+t",
        "command": "workbench.action.files.newUntitledFile"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.files.openFolder"
    },

    // Font size
    {
        "key": "ctrl+=",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+-",
        "command": "editor.action.fontZoomOut"
    },

    // Editor splitting
    {
        "key": "ctrl+k left",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+k right",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+k up",
        "command": "workbench.action.splitEditorOrthogonal"
    },
    {
        "key": "ctrl+k down",
        "command": "workbench.action.splitEditorOrthogonal"
    },

    // Chrome-like tab switching
    {
        "key": "ctrl+1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "ctrl+2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "ctrl+3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    {
        "key": "ctrl+4",
        "command": "workbench.action.openEditorAtIndex4"
    },
    {
        "key": "ctrl+5",
        "command": "workbench.action.openEditorAtIndex5"
    },
    {
        "key": "ctrl+6",
        "command": "workbench.action.openEditorAtIndex6"
    },
    {
        "key": "ctrl+7",
        "command": "workbench.action.openEditorAtIndex7"
    },
    {
        "key": "ctrl+8",
        "command": "workbench.action.openEditorAtIndex8"
    },
    {
        "key": "ctrl+9",
        "command": "workbench.action.openEditorAtIndex9"
    },


    // =========================================================================
    // Editor
    // =========================================================================

    // Line editing
    {
        "key": "ctrl+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {   // Duplicate line down
        "key": "ctrl+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus"
    },
    {   // Select line
        "key": "ctrl+l",
        "command": "expandLineSelection",
        "when": "editorTextFocus"
    },

    {
        "key": "ctrl+shift+q",
        "command": "rewrap.rewrapComment",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+m",
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },


    // =========================================================================
    // Activity Bar/Sidebar
    // =========================================================================

    {   // Show and focus sidebar
        "key": "ctrl+\\",
        "when": "!sideBarVisible",
        "command": "macros.showAndFocusSidebar"
    },
    {   // Show and focus sidebar
        "key": "ctrl+shift+\\",
        "when": "!sideBarVisible",
        "command": "macros.showAndFocusSidebar"
    },
    {   // Hide sidebar
        "key": "ctrl+\\",
        "when": "sideBarVisible",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {   // Hide sidebar
        "key": "ctrl+shift+\\",
        "when": "sideBarVisible",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {   // Focus bars
        "key": "alt+\\",
        "when": "sideBarVisible",
        "command": "workbench.action.focusSideBar"
    },
    {   // Show and focus bars if they aren't visible
        "key": "alt+\\",
        "when": "!sideBarVisible",
        "command": "macros.showAndFocusSidebar"
    },
    {   // Unfocus bars
        "key": "alt+\\",
        "when": "sideBarFocus",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {   // Move up sidebar view
        "key": "ctrl+shift+j",
        "when": "sideBarFocus",
        "command": "workbench.action.previousSideBarView"
    },
    {   // Move down sidebar view
        "key": "ctrl+shift+k",
        "when": "sideBarFocus",
        "command": "workbench.action.nextSideBarView"
    },

    // File Explorer
    {   // Enable filtering
        "key": "/",
        "when": "filesExplorerFocus && !inputFocus",
        "command": "list.toggleKeyboardNavigation"
    },
    {   // Add file
        "key": "a",
        "when": "filesExplorerFocus && !inputFocus",
        "command": "explorer.newFile"
    },
    {   // Add folder
        "key": "shift+a",
        "when": "filesExplorerFocus && !inputFocus",
        "command": "explorer.newFolder"
    },
    {   // Rename file or folder
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },


    // =========================================================================
    // Panel
    // =========================================================================

    {   // Toggle view and focus of panel
        "key": "ctrl+`",
        "command": "workbench.action.togglePanel"
    },
    {   // Toggle view and focus panel
        "key": "ctrl+shift+`",
        "command": "workbench.action.togglePanel"
    },
    {   // Focus panel
        "key": "alt+`",
        // panelVisible doesn't exist
        "when": "activePanel == 'workbench.panel.markers' || activePanel == 'workbench.panel.output' || activePanel == 'workbench.panel.repl' || activePanel == 'workbench.panel.terminal' || activePanel == 'workbench.panel.comments' || activePanel == 'workbench.panel.search'",
        "command": "workbench.action.focusPanel"
    },
    {   // Show and focus panel if it isn't visible
        "key": "alt+`",
        // !panelVisible doesn't exist
        "when": "activePanel != 'workbench.panel.markers' && activePanel != 'workbench.panel.output' && activePanel != 'workbench.panel.repl' && activePanel != 'workbench.panel.terminal' && activePanel != 'workbench.panel.comments' && activePanel != 'workbench.panel.search'",
        "command": "workbench.action.togglePanel"
    },
    {   // Unfocus panel
        "key": "alt+`",
        "when": "panelFocus",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {   // Move left panel view
        "key": "ctrl+shift+j",
        "when": "panelFocus",
        "command": "workbench.action.previousPanelView"
    },
    {   // Move right panel
        "key": "ctrl+shift+k",
        "when": "panelFocus",
        "command": "workbench.action.nextPanelView"
    },
    {
        "key": "ctrl+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },

]

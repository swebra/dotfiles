{
    // General Settings
    // ===============
    // Visual
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "One Dark Pro",

    // Smooth scrolling
    "workbench.list.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,

    // Keyboard interactions
    "editor.acceptSuggestionOnEnter": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.commandPalette.preserveInput": true,


    // Editor Settings
    // ===============
    // Visual
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "editor.fontFamily": "'MesloLGS Nerd Font', monospace",
    "editor.fontSize": 14,
    "editor.rulers": [
        80,
        100
    ],
    "editor.renderWhitespace": "none",
    "editor.guides.indentation": false,

    // Saving + formatting
    "files.autoSave": "off",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,

    // Behavior
    "editor.stickyTabStops": true,
    "editor.snippetSuggestions": "top",
    "diffEditor.ignoreTrimWhitespace": false,


    // Panels Settings
    // ===============
    // Visual
    "workbench.activityBar.visible": false,
    "terminal.integrated.fontSize": 15,
    "workbench.colorCustomizations": {
        "terminal.ansiBlack": "#282c34",
        "terminal.ansiBlue": "#61afef",
        "terminal.ansiCyan": "#56b6c2",
        "terminal.ansiGreen": "#98c379",
        "terminal.ansiMagenta": "#c678dd",
        "terminal.ansiRed": "#e06c75",
        "terminal.ansiWhite": "#abb2bf",
        "terminal.ansiYellow": "#e5c07b",
        "terminal.ansiBrightBlack": "#454c59",
        "terminal.ansiBrightBlue": "#69bbff",
        "terminal.ansiBrightCyan": "#66d9e8",
        "terminal.ansiBrightGreen": "#b5e890",
        "terminal.ansiBrightMagenta": "#e48aff",
        "terminal.ansiBrightRed": "#ff7a85",
        "terminal.ansiBrightWhite": "#cfd7e6",
        "terminal.ansiBrightYellow": "#ffd68a",
    },

    // Behavior
    "workbench.list.defaultFindMode": "filter",
    "explorer.confirmDragAndDrop": false,

    // General Extension Settings
    // ==========================
    "extensions.ignoreRecommendations": true,

    // medo64.render-crlf
    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter": "¤",
    "code-eol.crlfCharacter": "¤¬",

    // streetsidesoftware.code-spell-checker
    "cSpell.userWords": [
        "Claerhout",
        "Drivewyze",
        "geofence"
    ],

    // jeff-hykin.macro-commander
    // "macros": {
    //     // Sidebar macros
    //     "showAndFocusSidebar": [
    //         "workbench.action.toggleSidebarVisibility",
    //         "workbench.action.focusSideBar",
    //     ],
    // },

    // Language Settings
    // =================
    // Markdown
    "markdown.preview.scrollPreviewWithEditor": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,

    // Python
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",

    // JSON
    "[json]": {
        "editor.tabSize": 2,
    },
    "[jsonc]": {
        "editor.tabSize": 2
    },

    // Web
    "[css]": {
        "editor.tabSize": 2,
    },
    "[html]": {
        "editor.tabSize": 2,
    },

    // Lisp
    "[lisp]": {
        "editor.tabSize": 2,
    },
}
